<%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
<% if !flash[:notice].blank?%>
<div class="notice">
  <%= flash[:notice]%>
</div>
<%end%>
<div class="col-lg-5 mt-5">
  <div class="card shadow mb-3">
    <div class="card-body">
      <h4 class="card-title"><%= @employee.name.camelize %></h4>
      <div class="row mt-3">
        <div class="col-lg-7">
          <h4>Email: <span class="badge bg-primary"><%= @employee.email %></span></h4>
        </div>
        <div class="col-lg-5 mt-3">
          <h4>Assign Floor: <span class="badge bg-primary">
            <%if @f.blank? %>
              0
            <% else%>
              <%= @f.number %>
            <%end%>
          </span></h4>
          <h4>Cars: <span class="badge bg-primary"><%= @vec%></span></h4>
        </div>
      </div>
      <%= link_to "Back to the Index Page", admin_page_index_path, class: "btn btn-outline-danger btn-lg mt-3" %>
    </div>
  </div>
</div>